{
    "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "sourceMap": true,
      "types": ["undici-types"],
      "paths": {
        // This is solely to stop a bug with @types/node as of 12/15/2023
        "undici-types": [
          "./node_modules/undici-types/index.d.ts"
        ],
      }
    },
    "include": ["src/**/*.ts", "custom.d.ts"],
    "exclude": ["node_modules"]
  }
  